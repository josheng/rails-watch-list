<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80);">
  <div class="container">
    <h1 class="text-center">Welcome to the Movie Watchlist!</h1>
    <p class="text-center">Add shit to your list and watch that shit later.</p>
  </div>
</div>
<div class="container">
  <div class="cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
    <div class="card-category my-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.list_url %>)">
      <%= list.name %>
    </div>
    <% end %>
  <% end %>
  </div>
</div>
